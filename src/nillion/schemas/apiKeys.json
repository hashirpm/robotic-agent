
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Keys",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "service": {
        "type": "string"
      },
      "apiKey": {
        "type": "object",
        "properties": {
          "$share": { "type": "string" }
        },
        "required": ["$share"]
      }
    },
    "required": ["_id", "service", "apiKey", "apiSecret"]
  }
}
